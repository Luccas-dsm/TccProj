<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FFF"
             x:Class="TccProj.MainPage">

    <StackLayout Spacing="80" VerticalOptions="Center">

        <Image Source="logo.png" WidthRequest="200" HeightRequest="200"></Image>
        
        <StackLayout VerticalOptions="Center" Padding="10" Spacing="10">

            <Entry Placeholder="Digite seu email" Keyboard="Email" x:Name="eEmail" PlaceholderColor="#000" TextColor="#000"/>
            <Entry Placeholder="Digite sua senha" IsPassword="True" x:Name="ePass" PlaceholderColor="#000"  TextColor="#000"/>
            <StackLayout Spacing="10" Padding="30" >
                <Button Text="Login" CornerRadius="10" BackgroundColor="#1A1A1A" TextColor="#FFF" FontSize="24" FontAttributes="Bold" x:Name="btnLogin" Clicked="btnLogin_Clicked" ></Button>
                <Button Text="Cadastrar" CornerRadius="10" BackgroundColor="#474747" TextColor="#FFF" FontSize="24" FontAttributes="Bold" x:Name="btnCadastrar" Clicked="btnCadastrar_Clicked" ></Button>

            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
