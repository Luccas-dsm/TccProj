             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FFF">


    <Grid RowDefinitions="*,*" RowSpacing="20" Padding="20">

        <StackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0">
                <Editor Placeholder="Digite o texto que deseja gravar" TextColor="#000" PlaceholderColor="#000" ></Editor>
                <Label Text="ou" FontSize="25" TextColor="#000" HorizontalTextAlignment="Center"></Label>
            <Editor Placeholder="Digite um link que deseja gravar" TextColor="#000" PlaceholderColor="#000"></Editor>
                <Button Text="Gravar Tag" TextColor="#000" BackgroundColor="#F8F8F8"></Button>
                <Button Text="Limpar Campos" TextColor="#000" BackgroundColor="#C3C3C3"></Button>
        </StackLayout>
        <StackLayout Grid.Row="1"></StackLayout>

    </Grid>
</ContentPage>