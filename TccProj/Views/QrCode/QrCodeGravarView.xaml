<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TccProj.Views.QrCode.QrCodeGravarView"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FFF"
             >


    <Grid RowDefinitions="150,*" Padding="20" x:Name="gridP">
        
        <StackLayout Padding="0" x:Name="stackPrincipal" Grid.Row="0">
            <Entry Placeholder="Digite o conteudo para gerar a tag" x:Name="text" PlaceholderColor="Black" TextColor="Black" ></Entry>
            <Button x:Name="btnGerar" Clicked="btnGerar_Clicked" Text="Gerar QrCode" HeightRequest="60"></Button>    
        </StackLayout>
        <StackLayout Grid.Row="1" x:Name="stackQrCode"></StackLayout>
    </Grid>



</ContentPage>